<svg
      height="480"
      viewBox="0 0 480 480"
      width="480"
      height="480"
      xmlns="http://www.w3.org/2000/svg"
      style="display: block;
      border-radius: 50%;
      width: 100%;
      height: 100%;"
    >
  <circle
        
        stroke-width="30"
        stroke-linecap="round" 
        stroke="#ddd"
        shape-rendering="geometricPrecision"
        fill="var(--cv-white)"
        r="210"
        cx="240"
        cy="240"
/>
  <circle
        class="cv-progress-ring"
        stroke-width="30"
        stroke-linecap="round" 
        stroke="var(--cv-blue)"
        shape-rendering="geometricPrecision"
        fill="none"
        r="210"
        cx="240"
        cy="240"
        transform-origin="center"
/>
  <!-- radius = (width / 2) - (strokeWidth * 2) -->
  <!-- circumference = radius * 2 * PI -->
</svg>